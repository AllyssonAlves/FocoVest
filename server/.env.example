# Arquivo de exemplo - copie para .env e configure os valores reais

# Ambiente
NODE_ENV=production

# Servidor
PORT=5000
HOST=0.0.0.0

# URLs permitidas (separadas por vírgula)
ALLOWED_ORIGINS=https://focovest.com,https://www.focovest.com,https://app.focovest.com
FRONTEND_URL=https://app.focovest.com

# Segurança
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_com_pelo_menos_32_caracteres
JWT_EXPIRES_IN=7d

# Rate Limiting (requests por janela de tempo)
RATE_LIMIT_GENERAL_MAX=100
RATE_LIMIT_GENERAL_WINDOW=15
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AUTH_WINDOW=15
RATE_LIMIT_REGISTER_MAX=3
RATE_LIMIT_REGISTER_WINDOW=60
RATE_LIMIT_SIMULATION_MAX=50
RATE_LIMIT_SIMULATION_WINDOW=15

# CORS
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Segurança adicional
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=sua_chave_de_sessao_super_secreta_aqui

# Logs
LOG_LEVEL=info
LOG_FORMAT=combined

# Performance
COMPRESSION_LEVEL=6
BODY_LIMIT=5mb
URL_LIMIT=5mb
PARAMETER_LIMIT=100

# Features flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true

# Monitoring (opcional)
SENTRY_DSN=
ANALYTICS_API_KEY=

# Database (se usar MongoDB no futuro)
# MONGODB_URI=mongodb://localhost:27017/focovest
# DB_MAX_CONNECTIONS=10
# DB_TIMEOUT=5000

# Cache (se implementar Redis no futuro)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# Email (se implementar envio de emails)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=noreply@focovest.com